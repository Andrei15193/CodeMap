    <EmbeddedResource Include="Templates\Declarations\Namespace.hbs" />
    <EmbeddedResource Include="Templates\Declarations\Property.hbs" />
    <EmbeddedResource Include="Templates\Declarations\Struct.hbs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Handlebars.Net" Version="1.11.5" />
    <PackageReference Include="PygmentSharp.Core" Version="0.3.0" />
    <PackageReference Include="StrongNamer" Version="0.2.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CodeMap\CodeMap.csproj" />
  </ItemGroup>

</Project>