    <EmbeddedResource Include="Partials\Documentation\Value.hbs" />
    <EmbeddedResource Include="Partials\Layout.hbs" />
    <EmbeddedResource Include="Partials\GenericParametersDocumentation.hbs" />
    <EmbeddedResource Include="Partials\MembersDeclaraction.hbs" />
    <EmbeddedResource Include="Templates\Declarations\Assembly.hbs" />
    <EmbeddedResource Include="Templates\Declarations\Class.hbs" />
    <EmbeddedResource Include="Templates\Declarations\Constant.hbs" />
    <EmbeddedResource Include="Templates\Declarations\Constructor.hbs" />
