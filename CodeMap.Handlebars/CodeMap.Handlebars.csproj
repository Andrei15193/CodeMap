<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <Description>A Handlebars.NET based implementation for generating documentation for libraries as static HTML websites.</Description>
    <Authors>Andrei15193</Authors>
    <Copyright>Andrei15193</Copyright>
    <PackageProjectUrl>https://github.com/Andrei15193/CodeMap</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Andrei15193/CodeMap.git</RepositoryUrl>
    <PackageReleaseNotes>* Added customizable Handlebars based website generator using CodeMap.</PackageReleaseNotes>
    <PackageTags>common reusable infrastructure handlebars html documentation</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/Andrei15193/CodeMap/master/package_logo.png</PackageIconUrl>
    <DisableStrongNamer>true</DisableStrongNamer>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Partials\Breadcrumbs.hbs" />
    <EmbeddedResource Include="Partials\Documentation.hbs" />
    <EmbeddedResource Include="Partials\Documentation\MemberReference.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Code.hbs" />
    <EmbeddedResource Include="Partials\Documentation\CodeBlock.hbs" />
    <EmbeddedResource Include="Partials\Documentation\DefinitionList.hbs" />
    <EmbeddedResource Include="Partials\Documentation\DefinitionListItem.hbs" />
    <EmbeddedResource Include="Partials\Documentation\DefinitionListItemDescription.hbs" />
    <EmbeddedResource Include="Partials\Documentation\DefinitionListItemTerm.hbs" />
    <EmbeddedResource Include="Partials\Documentation\DefinitionListTitle.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Example.hbs" />
    <EmbeddedResource Include="Partials\Documentation\GenericParameterReference.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Hyperlink.hbs" />
    <EmbeddedResource Include="Partials\Documentation\ListItem.hbs" />
    <EmbeddedResource Include="Partials\Documentation\OrderedList.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Paragraph.hbs" />
    <EmbeddedResource Include="Partials\Documentation\ParameterReference.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Remarks.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Summary.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Table.hbs" />
    <EmbeddedResource Include="Partials\Documentation\TableCell.hbs" />
    <EmbeddedResource Include="Partials\Documentation\TableColumn.hbs" />
    <EmbeddedResource Include="Partials\Documentation\TableRow.hbs" />
    <EmbeddedResource Include="Partials\Documentation\Text.hbs" />
