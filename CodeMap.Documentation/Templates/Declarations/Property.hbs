{{#with declarationNode}}
<h2>{{MemberName this}} Property</h2>

<p>Property type: {{TypeReferenceLink type}}.</p>
{{DocumentationContent summary}}

{{#if (IsReadOnlyProperty this)}}
<p>This is a read only property (<code>{{MemberAccessModifier this}}</code>).</p>
{{else if (IsWriteOnlyProperty this)}}
<p>This is a write only property (<code>{{MemberAccessModifier this}}</code>).</p>
{{else}}
<p>This is a read and write property (<code>{{MemberAccessModifier this}}</code>).</p>
{{/if}}

{{DocumentationContent value}}

{{#if (HasAny parameters)}}
<h3>Parameters</h3>
<ul>
    {{#each parameters}}
    <li>
        <h5>{{this.name}}: {{TypeReferenceLink type}}</h5>
        {{DocumentationContent description @root}}
    </li>
    {{/#each}}
</ul>
{{/if}}

{{#if (HasAny exceptions)}}
<h3>Exceptions</h3>
<ul>
    {{#each exceptions}}
    <li>
        <h5>{{TypeReferenceLink type}}</h5>
        {{DocumentationContent description @root}}
    </li>
    {{/each}}
</ul>
{{/if}}

{{DocumentationContent remarks}}
{{DocumentationContent examples}}
{{RelatedMembersList relatedMembers}}
{{/with}}