{{#*inline "navItem"}}
{{#if isSelected}}<a class="dropdown-item active" href="{{path}}">{{label}}</a>{{else}}<a class="dropdown-item" href="{{path}}">{{label}}</a>{{/if}}
{{/inline}}

<nav class="navbar sticky-top navbar-expand-md navbar-light bg-light">
    <div class="container">
        {{#with home}}
        {{#if isSelected}}<a class="navbar-brand active" href="{{path}}">{{label}}</a>{{else}}<a class="navbar-brand" href="{{path}}">{{label}}</a>{{/if}}
        {{/with}}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    {{#if isCodeMapSelected}}
                    <a class="nav-link dropdown-toggle active" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CodeMap</a>
                    {{else}}
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CodeMap</a>
                    {{/if}}
                    <div class="dropdown-menu">
                        {{#each codeMapVersions}}{{> navItem}}{{/each}}
                    </div>
                </li>
                <li class="nav-item dropdown">
                    {{#if isCodeMapHandlebarsSelected}}
                    <a class="nav-link dropdown-toggle active" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CodeMap.Handlebars</a>
                    {{else}}
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CodeMap.Handlebars</a>
                    {{/if}}
                    <div class="dropdown-menu">
                        {{#each codeMapHandlebarsVersions}}{{> navItem}}{{/each}}
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://github.com/Andrei15193/CodeMap">View on GitHub</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.nuget.org/packages/CodeMap">View on NuGet</a>
                </li>
            </ul>
        </div>
    </div>
</nav>