{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/CodeMap.Tests/CodeMap.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "generate Gemfile",
            "command": "mkdir --parents docs && echo >> docs/Gemfile \"source 'https://rubygems.org'\n\ngem 'github-pages', group: :jekyll_plugins\"",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/CodeMap.Documentation/bin"
            },
            "problemMatcher": []
        },
        {
            "label": "watch jekyll",
            "command": "bundle",
            "type": "process",
            "args": [
                "exec",
                "jekyll",
                "serve",
                "--watch",
                "--incremental",
                "--baseurl",
                "/CodeMap",
                "--open-url",
                "--trace"
            ],
            "options": {
                "cwd": "${workspaceFolder}/CodeMap.Documentation/bin/docs"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}